{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-12 form-group">
            {{ form_label(form.current_password, 'Mot de passe actuel') }}
            {{ form_errors(form.current_password) }}
            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
            {% if form_errors(form.current_password) %}
                <span class="help-block alert alert-danger">{{ form_errors(form.current_password) }}</span>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group">
            {{ form_label(form.plainPassword.first, 'Nouveau mot de passe') }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="col-md-6 form-group">
            {{ form_label(form.plainPassword.second, 'RÃ©crire le nouveau mot de passe') }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
            {% if form_errors(form.plainPassword.first) %}
                <span class="help-block alert alert-danger">{{ form_errors(form.plainPassword.first) }}</span>
            {% endif %}
        </div>
    </div>

    <div>
        <input class="btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
</form>
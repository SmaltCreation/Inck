{% trans_default_domain 'FOSUserBundle' %}

<div class="registration" itemscope itemtype="http://schema.org/Webpage">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" id="fos_user_registration_register" class="fos_user_registration_register">
        {{ form_errors(form) }}

        <div class="row first-section">
            <div class="col-sm-8">
                <section id="registration_required">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Informations requises</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.username) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.plainPassword.first) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                            <button class="btn btn-success" type="submit"><i class="fa fa-check"></i> {{ 'registration.submit'|trans }}</button>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Via les r√©seaux sociaux</h4>
                    </div>
                    <div class="panel-body">
                        <p><a href="{{ path('facebook_login') }}" class="btn btn-facebook btn-tooltip btn-block btn-sm" data-toggle="tooltip" data-placement="top" title="Connexion avec facebook"><i class="fa fa-facebook"></i> Facebook</a></p>
                        <p><a href="{{ path('google_login') }}" class="btn btn-google btn-tooltip btn-block btn-sm" data-toggle="tooltip" data-placement="top" title="Connexion avec google"><i class="fa fa-google"></i> Google</a></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <section id="registration_more">
                    <div class="well well-lg">
                        <div class="row">
                            <div class="col-xs-12">
                                {% image '@InckUserBundle/Resources/public/images/drop@2x.png' %}
                                    <img class="img-responsive img-inline" src="{{ asset_url }}" alt="Encre"/>
                                {% endimage %}
                                <h2>{{ 'registration.content.complete'|trans }}</h2>
                                <p class="description"  itemprop="description">
                                    {{ 'registration.content.complete_recap'|trans }}
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.lastname) }}
                            </div>
                            <div class="col-sm-6">

                                {{ form_row(form.firstname) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.school) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.occupation) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                {{ form_row(form.birthday) }}
                            </div>
                            <div class="col-sm-8">
                                {{ form_row(form.biography) }}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-6">
                <section id="registration_address">
                    <div class="well well-lg">
                        <div class="row">
                            <div class="col-xs-12">
                                {% image '@InckUserBundle/Resources/public/images/atlas@2x.png' %}
                                    <img itemprop="image" class="img-responsive img-inline" src="{{ asset_url }}" alt="Atlas"/>
                                {% endimage %}
                                <h2>{{ 'registration.content.coordinates'|trans }}</h2>
                                <p class="description"  itemprop="description">
                                    {{ 'registration.content.coordinates_recap'|trans }}
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.address) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.city) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.zipcode) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.country) }}
                            </div>
                        </div>
                    </div>
                </section>
                <section id="registration_websites">
                    <div class="well well-lg">
                        <div class="row">
                            <div class="col-xs-12">
                                {% image '@InckUserBundle/Resources/public/images/Facebook@2x.png' %}
                                <img itemprop="image" class="img-responsive img-inline" src="{{ asset_url }}" alt="Carte"/>
                                {% endimage %}
                                <h2>{{ 'registration.content.social_networks'|trans }}</h2>
                                <p class="description"  itemprop="description">
                                    {{ 'registration.content.social_networks_recap'|trans }}
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.facebook) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.twitter) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_row(form.googlePlus) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.linkedIn) }}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <div class="hidden">
            {{ form_rest(form) }}
        </div>
    </form>
</div>


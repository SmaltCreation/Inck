{% extends "InckUserBundle::layout.html.twig" %}
{% block title %}{{ 'group.pages.edit_a_group'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite, ?uglifycss' output='css/compiled/user/group/edit.css'
        'bundles/inckuser/css/Group/new.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen">
    {% endstylesheets %}
{% endblock %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <h1>{{ 'group.pages.edit_the_group'|trans }} : {{ group_name }}</h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        {% include "InckUserBundle:Group:edit_content.html.twig" %}
    </div>
{% endblock content %}

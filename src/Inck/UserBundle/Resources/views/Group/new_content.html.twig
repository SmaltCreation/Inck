{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_group_new') }}" {{ form_enctype(form) }} method="POST" class="fos_user_group_new group">
    {{ form_errors(form) }}

    <section>
        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    {% image '@InckUserBundle/Resources/public/images/bag@2x.png' %}
                        <img class="img-responsive img-inline" src="{{ asset_url }}" alt="Sac"/>
                    {% endimage %}
                    <h2>{{ 'group.pages.group_purpose'|trans }}</h2>
                    <p class="description">
                        {{ 'group.pages.group_recap'|trans }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.website) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.type) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.private) }}
                </div>
            </div>

            <button class="btn btn-success" type="submit"><i class="fa fa-plus"></i> {{ 'group.new.submit'|trans }}</button>
        </div>
    </section>

    <section>
        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    {% image '@InckUserBundle/Resources/public/images/Map-drop@2x.png' %}
                    <img class="img-responsive img-inline" src="{{ asset_url }}" alt="Carte"/>
                    {% endimage %}
                    <h2>Coordonn√©es</h2>
                    <p class="description">
                        {{ 'group.pages.coordinates_recap'|trans }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.city) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.zipcode) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.country) }}
                </div>
            </div>

            <div class="hidden">
                {{ form_rest(form) }}
            </div>

            <button class="btn btn-success" type="submit"><i class="fa fa-plus"></i> {{ 'group.new.submit'|trans }}</button>
        </div>
    </section>
</form>
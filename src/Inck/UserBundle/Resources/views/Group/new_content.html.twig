{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_group_new') }}" {{ form_enctype(form) }} method="POST" class="fos_user_group_new">
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="hidden">
        {{ form_rest(form) }}
    </div>

    <button class="btn btn-success" type="submit"><i class="fa fa-plus"></i> {{ 'group.new.submit'|trans }}</button>
    <input class="btn btn-success" type="submit" value="{{ 'group.new.submit'|trans }}" />
</form>
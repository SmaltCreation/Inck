{% extends "InckUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Editer mon profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='yui_css' filter='cssrewrite' output='css/compiled/user/profile/edit.css'
        'bundles/inckuser/css/Registration/register.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen">
    {% endstylesheets %}
{% endblock %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <h1>Editer mon profil</h1>
            <p>
                <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default"><i class="fa fa-user"></i> Retourner Ã  mon profil</a>
                <button class="btn btn-success" type="submit"><i class="fa fa-refresh"></i> {{ 'profile.edit.submit'|trans }}</button>
            </p>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        {% if fosuser_form is defined and fosuser_form == 'braincrafted' %}
            {% include "FOSUserBundle:Profile:edit_content_braincrafted.html.twig" %}
        {% else %}
            {% include "FOSUserBundle:Profile:edit_content.html.twig" %}
        {% endif %}
    </div>
{% endblock content %}

{% extends "InckUserBundle::layout.html.twig" %}

{% block title %}Profil de {{ user.lastName and user.firstName ? user.firstName ~ ' ' ~ user.lastName : user.username }}{% endblock %}
{% block description %}{% if user.biography %}<meta name="description" content="{{ user.biography|slice(0, 157) }}{% if user.biography|length > 157 %}...{% endif %}">{% endif %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='yui_css' filter='cssrewrite' output='css/compiled/user/profile/preview.css'
        'bundles/inckuser/css/Profile/preview.css'
        'bundles/inckarticle/css/Article/timeline.css'
        'bundles/inckarticle/css/Article/summary.css'
        'bundles/inckarticle/css/Article/social.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen">
    {% endstylesheets %}
{% endblock %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ user.lastName and user.firstName ? user.firstName ~ ' ' ~ user.lastName : user.username }}</h1>
                    {{ render(controller('InckNotifBundle:Subscription:button', { entity: 'inck_notif.user_class', id: user.id })) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="profile preview">
        <section>
            <div class="container">
                {% include('InckUserBundle:Profile:preview_content.html.twig') %}
            </div>
        </section>
        <hr>
        <section id="user-{{ user.id }}-articles" class="user-articles">
            {{ render(controller('InckArticleBundle:Article:timeline', { 'filters': { 'author': user.id } })) }}
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='yui_js' output='js/compiled/user/profile/preview.js'
        'bundles/inckarticle/js/Article/social.js'
        'bundles/incknotif/js/Subscription/new.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
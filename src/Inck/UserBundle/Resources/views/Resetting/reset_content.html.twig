{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.plainPassword.first) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.plainPassword.second) }}
        </div>
    </div>
    <div class="hidden">
        {{ form_rest(form) }}
    </div>

    <button class="btn btn-success" type="submit"><i class="fa fa-unlock-alt"></i> {{ 'resetting.request.submit'|trans }}</button>
</form>

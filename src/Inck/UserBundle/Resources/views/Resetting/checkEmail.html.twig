{% extends "InckUserBundle::layout.html.twig" %}
{% block title %}{{ "Forgot your password"|trans }}{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <h1>{{ "Reset my password"|trans }}</h1>
            <p>{{ "Checking email address"|trans }}</p>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <p>{{ 'resetting.check_email'|trans({'%email%': email}) }}</p>
    </div>
{% endblock %}

{% extends 'InckCoreBundle::layout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ article.title }}</h1>
                    {% if app.security.getToken().getUser() == article.author %}
                        <a href="{{ path('article_edit', { 'id': article.id } ) }}" class="btn btn-default">
                            Ã‰diter
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.title }}" class="img-responsive img-rounded">
        <br>
        {{ dump(article) }}
    </div>
{% endblock %}
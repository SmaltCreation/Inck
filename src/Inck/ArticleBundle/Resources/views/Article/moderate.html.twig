{% extends 'InckArticleBundle::layout.html.twig' %}

{% block title %}Modérer les articles{% endblock %}

{% block description %}
    {% if app.request.attributes.get('_route') == 'inck_article_article_new' %}
        <meta name="description" content="@todo écrire la description">
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='yui_css' filter='cssrewrite' output='css/compiled/article/article/moderate.css'
        'bundles/inckarticle/css/Article/timeline.css'
        'bundles/inckarticle/css/Article/summary.css'
        'bundles/inckarticle/css/Article/social.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen">
    {% endstylesheets %}
{% endblock %}

{% block header %}
    <div class="jumbotron">
        <div class="container">
            <h1>Modérer les articles</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque rutrum magna vehicula vulputate dapibus. Maecenas tempus nisi tellus, sit amet faucibus elit vulputate vitae.</p>
            <p>
                <span class="block">
                    {% include 'InckArticleBundle:Article:open_filter.html.twig' %}
                </span>
            </p>
        </div>
    </div>
{% endblock %}

{% block content %}
    {{ render(controller('InckArticleBundle:Article:timeline', { 'filters': { 'type': 'in_moderation' } })) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='yui_js' output='js/compiled/article/article/moderate.js'
        'bundles/inckarticle/js/Article/timeline.js'
        'bundles/inckarticle/js/Article/social.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
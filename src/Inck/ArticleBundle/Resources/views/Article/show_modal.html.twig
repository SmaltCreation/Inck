{% trans_default_domain 'ArticleBundle' %}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">{{ 'article.error.close'|trans }}</span></button>
    <h4 class="modal-title" id="article-title">{{ article.title }}</h4>
    <p>{{ article.summary }}</p>
</div>
<div class="modal-body">
    <p>
        {% if article.imageName %}
            <img class="img-responsive" src="{{ vich_uploader_asset(article, 'article_image')|apply_filter('article_modal') }}" alt="Image de l'article : {{ article.title }}">
        {% else %}
            {% image '@InckArticleBundle/Resources/public/images/article/default.jpg' %}
                <img class="img-responsive" src="{{ asset_url|apply_filter('article_modal') }}" alt="Image par dÃ©faut"/>
            {% endimage %}
        {% endif %}
        {{ article.content|raw }}
    </p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> {{ 'article.error.close'|trans }}</button>
</div>

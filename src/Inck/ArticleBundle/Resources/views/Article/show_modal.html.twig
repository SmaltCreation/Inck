{% trans_default_domain 'ArticleBundle' %}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">{{ 'article.error.close'|trans }}</span></button>
            <h4 class="modal-title" id="myModalLabel">{{ article.title }}</h4>
            <p>{{ article.summary }}</p>
        </div>
        <div class="modal-body">
            <p>{{ article.content|raw }}</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> {{ 'article.error.close'|trans }}</button>
        </div>
    </div>
</div>
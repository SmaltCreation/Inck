<div class="articles" >
    {% for article in articles %}
        <article id="article-{{ article.id }}" class="well well-sm">
            {% set articleUrl = path('inck_article_article_show', { 'id': article.id, 'slug': article.slug, 'updatedAt': article.updatedAt|date('Y-m-d') }) %}
            <div class="article-image-preview">
                <a href="{{ articleUrl }}">
                    {% if article.imageName %}
                        <img class="img-inline img-responsive" src="{{ vich_uploader_asset(article, 'article_image')|apply_filter('article_featured') }}" alt="Image de l'article : {{ article.title }}">
                    {% else %}
                        {% image '@InckArticleBundle/Resources/public/images/article/default.jpg' %}
                        <img class="img-inline img-responsive" src="{{ asset_url|apply_filter('article_featured') }}" alt="Image par dÃ©faut"/>
                        {% endimage %}
                    {% endif %}
                </a>
                <div class="watchLater"><p>{{ render(controller('InckArticleBundle:Article:buttonWatchLater', { 'article': article })) }}</p></div>
            </div>

            <div class="description">
                <h5><a href="{{ articleUrl }}">{{ article.title }}</a></h5>
                <p>{{ article.summary|slice(0, 100) }}{% if article.summary|length > 100 %}...{% endif %}</p>
            </div>
        </article>
        {% if loop.index == 2 %}
            <div class="article-advertisement">
                <p>
                    <img class="img-responsive" src="https://storage.googleapis.com/support-kms-prod/SNP_BBFA15D142E88EAB62B5C247174644F87043_2922338_en_v2">
                </p>
            </div>
        {% endif %}
    {% endfor %}
</div>
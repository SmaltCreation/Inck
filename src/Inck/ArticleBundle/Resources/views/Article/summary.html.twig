{% set currentRoute = app.request.attributes.get('_route') %}
<div class="summary">
    <div class=" well">
        {% if currentRoute == 'inck_article_article_show' or currentRoute == 'inck_article_article_moderate' %}
            <h3>Résumé de l'article</h3>
        {% else %}
            <h3 itemprop="name"><a href="{{ path('inck_article_article_show', { 'id': article.id }) }}">{{ article.title }}</a></h3>
        {% endif %}

        <p class="about">
            rédigé par <a itemprop="author" href="{{ path('fos_user_profile_preview', { 'username': article.author.username }) }}">{{ article.author.lastname and article.author.firstname ? article.author.firstname ~ ' ' ~ article.author.lastname : article.author.username }}</a> &ndash;
            publié le <time itemprop="datePublished" datetime="{{ article.publishedAt|date('Y-m-d') }}T{{ article.publishedAt|date('H:i') }}">{{ article.publishedAt|date('d/m/Y à H:i') }}</time>
        </p>

        {% if article.imageName %}
            <img itemprop="image" class="img-thumbnail visible-xs visible-sm hidden-md hidden-lg"src="{{ vich_uploader_asset(article, 'article_image') }}" alt="Image de l'article : {{ article.title }}">
        {% endif %}

        <p itemprop="description">
            {{ article.summary }}
        </p>

        <div class="row">
            {% if currentRoute != 'inck_article_article_show' and currentRoute != 'article_moderate' %}
                <div class="col-sm-5 col-md-4 col-lg-3">
                    <p>
                        <a itemprop="url" class="btn btn-success btn-readmore" href="{{ path('inck_article_article_show', { 'id': article.id }) }}"><i class="fa fa-book"></i> Lire davantage</a>
                    </p>
                </div>
            {% endif %}
            <div class="col-sm-7 col-md-8 col-lg-9">
                <p class="categories">
                    {% for category in article.categories %}
                        <a itemprop="genre" href="{#{ path('inck_article_category_show', { 'name': category.name }) }#}" class="btn btn-primary btn-xs category">{{ category.name }}</a>
                    {% endfor %}
                </p>
            </div>
        </div>
    </div>

    <div class="hidden-xs hidden-sm visible-md visible-lg preview text-center">
        {% if app.request.attributes.get('_route') == 'inck_article_article_show' or app.request.attributes.get('_route') == 'inck_article_article_moderate' %}
            {% set path = '#content' %}
        {% else %}
            {% set path = path('inck_article_article_show', { 'id': article.id }) %}
        {% endif %}

        <a href="{{ path }}">
            {% if article.imageName %}
                <img itemprop="image" class="img-circle"src="{{ vich_uploader_asset(article, 'article_image') }}" alt="Image de l'article : {{ article.title }}">
            {% else %}
                {% image '@InckArticleBundle/Resources/public/images/article/default.jpg' %}
                    <img class="img-circle" src="{{ asset_url }}" alt="Image par défaut"/>
                {% endimage %}
            {% endif %}
        </a>
    </div>

    <meta itemprop="keywords" content="{% for tag in article.tags %}{{ tag.name }}{% if loop.last == false %},{% endif %}{% endfor %}"/>
</div>
{% trans_default_domain 'ArticleBundle' %}
<div class="modal fade" id="article-error">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">{{ 'article.error.close'|trans }}</span>
                </button>
                <h4 class="modal-title">{{ 'article.error.occurred'|trans }}</h4>
            </div>
            <div class="modal-body">
                <p>{{ message }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-times"></i> {{ 'article.error.close'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>
{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='yui_css' filter='cssrewrite' output='css/compiled/main.css'
        'bundles/inckcore/css/navbar.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen">
    {% endstylesheets %}
{% endblock %}

{% block navbar %}
    <div class="hidden-xs hidden-sm visible-md visible-lg">
        <nav id="bt-menu" class="bt-menu">
            <a href="#" class="bt-menu-trigger"><span>Menu</span></a>
            <ul>
                <li><a href="#">Écrire</a></li>
                <li><a href="#">Modérer</a></li>
                <li><a href="#">Catégories</a></li>
                <li><a href="#">A propos</a></li>
                <li><a href="#">Presses</a></li>
            </ul>
            <ul>
                <li><a href="#" class="bt-icon btn-twitter"><i class="fa fa-twitter fa-lg"></i></a></li>
                <li><a href="#" class="bt-icon btn-google"><i class="fa fa-google-plus fa-lg"></i></a></li>
                <li><a href="#" class="bt-icon btn-facebook"><i class="fa fa-facebook fa-lg"></i></a></li>
            </ul>
        </nav>
    </div>
    <div class="visible-xs visible-sm hidden-md hidden-lg">
        <!-- TODO: regular top navbar for small screen -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='yui_js' output='js/compiled/main.js'
        'bundles/inckcore/js/classie.js'
        'bundles/inckcore/js/modernizr.custom.js'
        'bundles/inckcore/js/navbar.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
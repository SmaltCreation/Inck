{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='yui_css' filter='cssrewrite' output='css/compiled/layout.css'
        'bundles/inckcore/css/navbar.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen">
    {% endstylesheets %}
{% endblock %}

{% block navbar %}
    <div class="hidden-xs hidden-sm visible-md visible-lg">
        {% include('InckCoreBundle::navbar_first.html.twig') %}
    </div>
    <div class="visible-xs visible-sm hidden-md hidden-lg">
        <div class="container">
            {% include('InckCoreBundle::navbar_second.html.twig') %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts filter='yui_js' output='js/compiled/core/preview.js'
        'bundles/inckcore/js/classie.js'
        'bundles/inckcore/js/modernizr.custom.js'
        'bundles/inckcore/js/navbar.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
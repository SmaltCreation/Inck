<div class="singleupload-controls-wrapper">
    <div class="btn-wrapper">
        <button type="button" class="btn btn-danger cancel" style="display: none;">
            <i class="fa fa-fw fa-times"></i>
            <span> {{ 'afe_single_upload.button.cancel'|trans({}, 'AvocodeFormExtensions') }}</span>
        </button>
    </div>
    {% if deleteable is not empty %}
        <div class="btn-wrapper">
            <button type="button" class="btn btn-danger delete" style="display: none;">
                <i class="fa fa-fw fa-trash"></i>
                <span> {{ 'afe_single_upload.button.delete'|trans({}, 'AvocodeFormExtensions') }}</span>
            </button>
        </div>
        <input type="hidden" id="{{ id ~ '_delete' }}" name="{{ form.parent.vars.full_name ~ '['~name~'][delete]' }}" value="0">
    {% endif %}
</div>
